{
  "manifest_version": 3,
  "name": "Guardian - 浏览器保护助手",
  "version": "1.0.0",
  "description": "智能网址过滤和上网监控工具，帮助培养健康上网习惯",
  "author": "Guardian Team",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Guardian 浏览器保护"
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "alarms",
    "notifications"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "options_page": "options/options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["blocked/blocked.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

